@model Usuario

@{
    ViewData["Title"] = "PerfilProfesor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>

    <title>Perfil Profesor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/PerfilProfesorSheet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>
<body>
    <div class="container">
        <div class="row">
            <!-- Contenedor izquierdo para botones -->
            <div class="col-md-3 left-container">
                <img src="~/css/Images/ulacitlogo.png" class="img-fluid mb-5" alt="ULACIT LOGO">
                <div class="home-btn">
                    <a href="@Url.Action("Profesor", "Home")" type="button" class="btn btn-secondary btn-block">
                        <i class="fas fa-home"></i>
                        Home
                    </a>
                </div>
                <div class="cursos-btn">
                    <a href="@Url.Action("CursosProfesor", "Profesor")" type="button" class="btn btn-secondary btn-block">
                        <i class="fas fa-book"></i>
                        Cursos
                    </a>
                </div>
                <div class="signout-btn">
                    <form asp-action="SignOut" asp-controller="Profesor" method="post">
                        <button type="submit" class="btn btn-dark btn-block">
                            <i class="fas fa-sign-out-alt"></i>
                            Sign Out
                        </button>
                    </form>
                </div>
            </div>
            <!-- Contenedor derecho para la información -->
            <div class="col-md-9">
                <h1>@Model.Name</h1>
                <div class="section">
                    <br />
                    <h3>Basic Information</h3>
                    <p><strong>Professor ID: </strong>@Model.IdUsuario</p>
                    <p><strong>Email Address: </strong> @Model.Email</p>
                    <p><strong>Birthday: </strong> @Model.Dob.ToShortDateString()</p>
                </div>
                <div class="section">
                    <h2>Additional Information</h2>
                    <p><strong>Address: </strong> @Model.Address</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
